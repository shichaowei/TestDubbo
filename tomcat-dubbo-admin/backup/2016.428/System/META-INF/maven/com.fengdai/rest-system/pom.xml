<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.tairanchina</groupId>
		<artifactId>rest-parent</artifactId>
		<version>0.0.1.M1-SNAPSHOT</version>
	</parent>
	<groupId>com.fengdai</groupId>
	<artifactId>rest-system</artifactId>
	<packaging>war</packaging>

	<distributionManagement>
		<repository>
			<id>nexus-release</id>
			<name>Team Nexus Release Repository</name>
			<url>http://121.41.17.205:18081/nexus/content/repositories/fengdai-releases</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<name>Team Nexus Snapshot Repository</name>
			<url>http://121.41.17.205:18081/nexus/content/repositories/fengdai-snapshots</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>
	
	<dependencies>
		<dependency>
			<groupId>org.mongodb</groupId>
			<artifactId>mongo-java-driver</artifactId>
			<version>3.2.0</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.tairanchina</groupId>
			<artifactId>tx-rest</artifactId>
			<version>${server.tx.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>dubbo-beego-admin-client</artifactId>
					<groupId>com.tairanchina</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.fengdai</groupId>
			<artifactId>dubbo-system-client</artifactId>
			<version>${server.dubbo.version}</version>
			<exclusions>
				<exclusion>
					<groupId>net.sf.json-lib</groupId>
					<artifactId>json-lib</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.tairanchina</groupId>
			<artifactId>rest-common</artifactId>
			<version>${server.rest.version}</version>
		</dependency>
		 <dependency>
            <groupId>com.tairanchina</groupId>
            <artifactId>dubbo-beego-client</artifactId>
            <version>0.0.1.M1-RELEASE</version>
        </dependency>
		<dependency>
			<groupId>org.glassfish.jersey.test-framework</groupId>
			<artifactId>jersey-test-framework-core</artifactId>
			<version>2.19</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.test-framework.providers</groupId>
			<artifactId>jersey-test-framework-provider-grizzly2</artifactId>
			<version>2.19</version>
			<scope>test</scope>
		</dependency>
 		<dependency>
			<groupId>com.fengdai</groupId>
			<artifactId>rest-base</artifactId>
			<version>0.0.1.M1-SNAPSHOT</version>
		</dependency>
	</dependencies>
 	<profiles>
        <profile>
            <!-- 本地开发环境 -->
            <id>dev</id>
            <properties>
                <config.logback.exclude>logback.xml</config.logback.exclude>
                <commonConfig>config/dev/local-resource.properties</commonConfig>
                <zookeeper>zookeeper://172.30.248.105:2181</zookeeper>
                <registerZookeeper>zookeeper://121.43.116.29:2181</registerZookeeper>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <!-- 测试环境 -->
            <id>test</id>
            <properties>
                <config.logback.exclude>logback.xml</config.logback.exclude>
                <commonConfig>config/test/local-resource.properties</commonConfig>
                <zookeeper>zookeeper://172.30.249.243:2181</zookeeper>
                <registerZookeeper>zookeeper://121.43.116.29:2181</registerZookeeper>
            </properties>
        </profile>
        <profile>
            <!-- 生产环境 -->
            <id>prd</id>
            <properties>
                <config.logback.exclude>logback-test.xml</config.logback.exclude>
                <commonConfig>config/prd/local-resource.properties</commonConfig>
                <zookeeper>zookeeper://10.20.20.10:2181</zookeeper>
                <registerZookeeper>zookeeper://120.26.225.23:2181</registerZookeeper>
            </properties>
        </profile>
    </profiles>
    <properties>
        <warName>System</warName>
        <commonConfigLocation>${commonConfig}</commonConfigLocation>
        <zookeeperConfigLocation>${zookeeper}</zookeeperConfigLocation>
        <registerZookeeperConfigLocation>${registerZookeeper}</registerZookeeperConfigLocation>
    </properties>
    <build>
        <finalName>${warName}</finalName>
        <resources>
            <resource>
                <directory>src/main/webapp</directory>
                <includes>
                    <include>WEB-INF/web.xml</include>
                </includes>
                <targetPath>../${warName}/</targetPath>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.*</include>
                </includes>
                <excludes>
                    <exclude>${config.logback.exclude}</exclude>
                </excludes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>com.fengdai.system.Main</mainClass>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
                    <outputDirectory>c:/deploy</outputDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
          
            <plugin>
			  <groupId>org.eclipse.jetty</groupId>
			  <artifactId>jetty-maven-plugin</artifactId>
			  <version>9.3.7.v20160115</version>
			</plugin>
            
        </plugins>
    </build>
</project>
